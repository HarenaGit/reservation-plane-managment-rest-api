<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view_logics.dashboard_view.fragment.DashboardFragment"
    android:background="@color/backgroundColor"
    android:layout_marginBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:scrollbarThumbHorizontal="@null"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="0dp"
                android:background="@drawable/box_container"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView

                        android:layout_marginTop="8dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_data_usage"
                        android:tint="@color/teal"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:letterSpacing="0.05"
                                android:textColor="@color/dark_grey"
                                android:textSize="11dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:textAlignment="textEnd"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/monthLabel"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ar"
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/teal"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="10dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/black"
                                    android:textSize="22dp"
                                    android:fontFamily="@font/arial"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/currentMonthValue"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/currentMonthLoader"
                            android:background="@color/white"
                            android:visibility="gone"
                            >
                            <com.github.ybq.android.spinkit.SpinKitView
                                style="@style/SpinKitView.Small.ThreeBounce"

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                app:SpinKit_Color="@color/blue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_plane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="27dp"
                        android:layout_marginLeft="12dp"
                        />
                    <RelativeLayout
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:background="@drawable/number_container"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/planeNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/arial"
                            android:textSize="9dp"
                            android:text="0"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentAvionLoader"
                    android:visibility="gone"
                    >

                    <com.github.ybq.android.spinkit.SpinKitView
                        style="@style/SpinKitView.Small.ThreeBounce"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        app:SpinKit_Color="@color/blue" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/box_container"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <Button
                        android:id="@+id/yearPickerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/arial"
                        android:textColor="@color/white"
                        app:icon="@drawable/ic_switch_left"
                        style="Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyse"
                        android:letterSpacing="0.05"
                        android:textColor="@color/dark_grey"
                        android:textSize="11dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textAlignment="textEnd"
                        android:layout_marginBottom="10dp"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recette"
                            android:letterSpacing="0.05"
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:fontFamily="@font/arial"
                            android:textAlignment="textEnd"
                            android:layout_marginBottom="5dp"
                            />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/chartLayout"
                    >
                    <FrameLayout
                        android:id="@+id/fragment_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/linearChartLoader"
                    android:visibility="gone"
                    >

                   <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@color/white"

                        >
                        <com.github.ybq.android.spinkit.SpinKitView
                            style="@style/SpinKitView.Small.FadingCircle"
                            android:id="@+id/smallLoader"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            app:SpinKit_Color="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="0dp"
                android:background="@drawable/box_container"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_data_usage"
                        android:tint="@color/purple"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/yearLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:letterSpacing="0.05"
                                android:textColor="@color/dark_grey"
                                android:textSize="11dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:textAlignment="textEnd"
                                android:layout_marginBottom="10dp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ar"
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/purple"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="10dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/black"
                                    android:textSize="22dp"
                                    android:fontFamily="@font/arial"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/currentYearValue"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/currentYearLoader"
                            android:visibility="gone"
                            android:background="@color/white"
                            >
                            <com.github.ybq.android.spinkit.SpinKitView
                                style="@style/SpinKitView.Small.ThreeBounce"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                app:SpinKit_Color="@color/blue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>



    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/recetteBoutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/blue"
        android:clickable="true"
        android:src="@drawable/ic_money"
        app:tint="@color/white"

        />
</RelativeLayout>