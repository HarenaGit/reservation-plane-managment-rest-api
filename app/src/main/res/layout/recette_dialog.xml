<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    tools:context=".view_logics.flight_view.activity.AddFlightActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarThumbVertical="@null"
                android:scrollbarThumbHorizontal="@null"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"

                                >
                                <RelativeLayout
                                    android:layout_width="20dp"
                                    android:layout_height="50dp"
                                    >

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/ic_data_usage"
                                        android:tint="@color/blue"
                                        />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Numéro de l'avion (Av-)"
                                            android:letterSpacing="0.05"
                                            android:textColor="@color/black"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:layout_marginBottom="5dp"
                                            />
                                        <Spinner
                                            android:id="@+id/avionRecette"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <RelativeLayout
                                        android:layout_width="20dp"
                                        android:layout_height="50dp"
                                        >

                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/ic_data_usage"
                                            android:tint="@color/purple" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="20dp"
                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="15dp"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date d2but"
                                                android:letterSpacing="0.05"
                                                android:textColor="@color/black"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/opensans_semibold"
                                                android:layout_marginBottom="5dp"
                                                />
                                            <EditText
                                                android:layout_height="35dp"
                                                android:layout_width="match_parent"
                                                android:hint="..."
                                                android:fontFamily="@font/segeo_ui"
                                                android:textSize="14dp"
                                                android:focusedByDefault="true"
                                                android:focusable="true"
                                                android:textColor="@color/dark_grey"
                                                android:background="@drawable/edit_text_background"
                                                android:id="@+id/dateDebut"
                                                android:focusableInTouchMode="false"
                                                />
                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <RelativeLayout
                                        android:layout_width="20dp"
                                        android:layout_height="50dp"
                                        >

                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@android:color/transparent"
                                            android:src="@drawable/ic_data_usage"
                                            android:tint="@color/teal" />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="20dp"
                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="15dp"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Date Fin"
                                                android:letterSpacing="0.05"
                                                android:textColor="@color/black"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/opensans_semibold"
                                                android:layout_marginBottom="5dp"
                                                />
                                            <EditText
                                                android:layout_height="35dp"
                                                android:layout_width="match_parent"
                                                android:hint="..."
                                                android:fontFamily="@font/segeo_ui"
                                                android:textSize="14dp"
                                                android:focusedByDefault="true"
                                                android:focusable="true"
                                                android:textColor="@color/dark_grey"
                                                android:background="@drawable/edit_text_background"
                                                android:id="@+id/dateFin"
                                                android:focusableInTouchMode="false"
                                                />
                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Recette"
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/monthLabel"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ar"
                                        android:letterSpacing="0.05"
                                        android:textColor="@color/red"
                                        android:textSize="16dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:textAlignment="textEnd"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginRight="10dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:letterSpacing="0.05"
                                        android:textColor="@color/black"
                                        android:textSize="22dp"
                                        android:fontFamily="@font/arial"
                                        android:textAlignment="textEnd"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/recetteValue"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Réservations :"
                                    android:layout_alignParentRight="true"
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/nombreReserv"
                                    />
                                <TextView
                                    android:layout_marginTop="35dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vol:"
                                    android:letterSpacing="0.05"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:textAlignment="textEnd"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/nombreVol"
                                    />
                            </RelativeLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="40dp"
                            android:text="Calculer"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/opensans_semibold"
                            android:backgroundTint="@color/blue"
                            android:id="@+id/calculerRecette"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>