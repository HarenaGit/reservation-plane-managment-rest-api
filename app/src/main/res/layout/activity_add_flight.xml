<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/backgroundColor"
tools:context=".view_logics.flight_view.activity.AddFlightActivity"
android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/backgroundColor"
            android:layout_marginTop="-8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/backButtonFlight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@color/backgroundColor"
                    android:elevation="0dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/blue"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/activity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segeouibold"
                        android:letterSpacing="0.15"
                        android:text="Nouveau vol"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@null"
            android:scrollbarThumbHorizontal="@null"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >
                            <RelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="50dp"
                                >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_data_usage"
                                    android:tint="@color/blue"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Numéro de vol"
                                        android:letterSpacing="0.05"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:layout_marginBottom="5dp"
                                        />
                                    <EditText
                                        android:layout_height="35dp"
                                        android:layout_width="match_parent"
                                        android:hint="..."
                                        android:fontFamily="@font/segeo_ui"
                                        android:textSize="14dp"
                                        android:textColor="@color/dark_grey"
                                        android:background="@drawable/edit_text_background"
                                        android:id="@+id/addFlightId"
                                        />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal">
                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:layout_centerVertical="true"
                           >
                           
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">
                               <RelativeLayout
                                   android:layout_width="20dp"
                                   android:layout_height="50dp"
                                   >

                                   <ImageView
                                       android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:background="@android:color/transparent"
                                       android:src="@drawable/ic_data_usage"
                                       android:tint="@color/purple" />
                               </RelativeLayout>
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_marginRight="20dp"
                                   >
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="15dp"
                                       android:orientation="vertical"
                                       >
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Heure de départ"
                                           android:letterSpacing="0.05"
                                           android:textColor="@color/black"
                                           android:textSize="12dp"
                                           android:fontFamily="@font/opensans_semibold"
                                           android:layout_marginBottom="5dp"
                                           />
                                       <EditText
                                           android:layout_height="35dp"
                                           android:layout_width="match_parent"
                                           android:hint="..."
                                           android:fontFamily="@font/segeo_ui"
                                           android:textSize="14dp"
                                           android:focusedByDefault="true"
                                           android:focusable="true"
                                           android:textColor="@color/dark_grey"
                                           android:background="@drawable/edit_text_background"
                                           android:id="@+id/addFlightDepDate"
                                           android:focusableInTouchMode="false"
                                           />
                                   </LinearLayout>

                               </RelativeLayout>

                           </LinearLayout>
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:layout_centerVertical="true"
                           >
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">
                               <RelativeLayout
                                   android:layout_width="20dp"
                                   android:layout_height="50dp"
                                   >

                                   <ImageView
                                       android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:background="@android:color/transparent"
                                       android:src="@drawable/ic_data_usage"
                                       android:tint="@color/teal" />
                               </RelativeLayout>
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_marginRight="20dp"
                                   >
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="15dp"
                                       android:orientation="vertical"
                                       >
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Heure d'arrivée"
                                           android:letterSpacing="0.05"
                                           android:textColor="@color/black"
                                           android:textSize="12dp"
                                           android:fontFamily="@font/opensans_semibold"
                                           android:layout_marginBottom="5dp"
                                           />
                                       <EditText
                                           android:layout_height="35dp"
                                           android:layout_width="match_parent"
                                           android:hint="..."
                                           android:fontFamily="@font/segeo_ui"
                                           android:textSize="14dp"
                                           android:focusedByDefault="true"
                                           android:focusable="true"
                                           android:textColor="@color/dark_grey"
                                           android:background="@drawable/edit_text_background"
                                           android:id="@+id/addFlightArvDate"
                                           android:focusableInTouchMode="false"
                                           />
                                   </LinearLayout>

                               </RelativeLayout>

                           </LinearLayout>
                       </RelativeLayout>
                   </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="20dp"
                                    android:layout_height="50dp"
                                    >

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/ic_data_usage"
                                        android:tint="@color/red" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Ville de départ"
                                            android:letterSpacing="0.05"
                                            android:textColor="@color/black"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:layout_marginBottom="5dp"
                                            />
                                        <EditText
                                            android:layout_height="35dp"
                                            android:layout_width="match_parent"
                                            android:hint="..."
                                            android:fontFamily="@font/segeo_ui"
                                            android:textSize="14dp"
                                            android:focusedByDefault="true"
                                            android:focusable="true"
                                            android:textColor="@color/dark_grey"
                                            android:background="@drawable/edit_text_background"
                                            android:id="@+id/addFlightDepCity"

                                            />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="20dp"
                                    android:layout_height="50dp"
                                    >

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/ic_data_usage"
                                        android:tint="@color/blue" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Ville d'arrivée"
                                            android:letterSpacing="0.05"
                                            android:textColor="@color/black"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:layout_marginBottom="5dp"
                                            />
                                        <EditText
                                            android:layout_height="35dp"
                                            android:layout_width="match_parent"
                                            android:hint="..."
                                            android:fontFamily="@font/segeo_ui"
                                            android:textSize="14dp"
                                            android:focusedByDefault="true"
                                            android:focusable="true"
                                            android:textColor="@color/dark_grey"
                                            android:background="@drawable/edit_text_background"
                                            android:id="@+id/addFlightArvCity"

                                            />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="50dp"
                                >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_data_usage"
                                    android:tint="@color/purple" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Frais"
                                        android:letterSpacing="0.05"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:layout_marginBottom="5dp"
                                        />
                                    <EditText
                                        android:layout_height="35dp"
                                        android:layout_width="match_parent"
                                        android:hint="..."
                                        android:fontFamily="@font/segeo_ui"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textColor="@color/dark_grey"
                                        android:background="@drawable/edit_text_background"
                                        android:id="@+id/addFlightCost"

                                        />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_data_usage"
                                    android:tint="@color/teal" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Avion"
                                        android:letterSpacing="0.05"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:layout_marginBottom="5dp"
                                        />

                                    <Spinner
                                            android:id="@+id/addFlightPlane"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"

                                            />
                                </LinearLayout>



                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    android:text="Enregistrer"
                    android:fontFamily="@font/opensans_semibold"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/saveFlightButton"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/addFlightLoading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:visibility="gone"
    >
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.FadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/blue"
        android:layout_centerInParent="true"
        />
</RelativeLayout>


</RelativeLayout>